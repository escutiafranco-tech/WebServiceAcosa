/* ================================
   VARIABLES Y RESET
   ================================ */

/* Define variables CSS reutilizables para colores, sombras, etc. */
:root {
	--primary-color: #2F3158;        /* Color principal azul oscuro */
	--primary-dark: #1a1c3a;         /* Versi칩n m치s oscura del color principal */
	--primary-light: #4a4d80;        /* Versi칩n m치s clara del color principal */
	--secondary-color: #A6A6A6;      /* Color secundario gris */
	--success-color: #28a745;        /* Color para indicar 칠xito */
	--warning-color: #ffc107;        /* Color para advertencias */
	--danger-color: #dc3545;         /* Color para errores/peligro */
	--info-color: #17a2b8;           /* Color para informaci칩n */
	--light-color: #f8f9fa;          /* Color de fondo claro */
	--dark-color: #343a40;           /* Color de texto oscuro */
	--border-color: #e1e5e9;         /* Color para bordes */
	--shadow: 0 4px 12px rgba(0,0,0,0.1); /* Sombra predeterminada */
	--border-radius: 8px;            /* Radio de borde predeterminado */
	--transition: all 0.3s ease;     /* Transici칩n suave para animaciones */
}

/* Reset universal: elimina m치rgenes y padding por defecto */
* {
	margin: 0;
	padding: 0;
	box-sizing: border-box; /* Incluye padding y border en el tama침o total */
}

/* Estilos base del cuerpo del documento */
body {
	font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Fuente principal */
	background: white; /* Fondo blanco limpio */
	height: 100vh; /* Altura exacta de viewport */
	color: #333; /* Color de texto principal */
	line-height: 1.6; /* Espaciado entre l칤neas */
	overflow: hidden; /* Elimina scroll global */
}

/* ================================
   CONTENEDORES PRINCIPALES - CORREGIDO
   ================================ */

/* Contenedores principales del m칩dulo y formulario */
.module-container,
.form-container {
	height: 100vh; /* Altura exacta de viewport */
	background: white; /* Fondo blanco */
	margin: 0 5px; /* a la derecha e izquierda */
	box-shadow: none; /* Sin sombra */
	display: flex; /* Flexbox para el layout */
	flex-direction: column; /* Direcci칩n columna */
	overflow: hidden; /* Sin overflow */
	position: relative; /* Contexto de posicionamiento */
	border-left: 0px solid var(--primary-color); /* Indicador visual de pesta침a activa */
}

/* ================================
   HEADERS - COMPLETAMENTE OCULTOS
   ================================ */

/* Ocultar completamente los headers duplicados */
.module-header,
.form-header {
	display: none !important;
}

.header-content h1,
.header-content p {
	display: none; /* Ocultar t칤tulos duplicados */
}

/* ================================
   BARRA SUPERIOR COMPACTA - 2 SECCIONES
   ================================ */

/* Barra superior dividida en dos secciones */

.barra-superior-custodias {
	background: var(--light-color); /* Fondo gris muy claro */
	padding: 8px 8px; /* Menos padding lateral */
	border-bottom: 1px solid var(--border-color); /* L칤nea separadora */
	display: flex; /* Layout flexible */
	justify-content: space-between; /* Dos secciones: izquierda y derecha */
	align-items: center; /* Centrado vertical */
	flex-wrap: wrap; /* Responsive: envolver en m칩viles */
	gap: 15px; /* Espacio entre secciones */
	flex-shrink: 0; /* No se reduce */
}

/* Secci칩n izquierda: Botones con fondo blanco */
.barra-izquierda {
	display: flex; /* Botones en fila */
	align-items: center; /* Centrado vertical */
	gap: 10px; /* Espacio entre botones */
	margin-left: 20px; /* Mover 20px a la izquierda */
}

/* Secci칩n derecha: Buscador y filtros */
.barra-derecha {
	display: flex; /* Elementos en fila */
	align-items: center; /* Centrado vertical */
	gap: 10px; /* Espacio entre elementos */
}

/* ================================
   BUSCADOR Y FILTROS COMPACTOS
   ================================ */

/* Caja de b칰squeda compacta */
.search-box {
	display: flex; /* Layout flexible */
	background: white; /* Fondo blanco */
	border: 2px solid var(--border-color); /* Borde gris */
	border-radius: var(--border-radius); /* Bordes redondeados */
	overflow: hidden; /* Oculta desbordamiento */
	min-width: 300px; /* Ancho m칤nimo adecuado */
}

.search-box input {
	border: none; /* Sin borde interno */
	padding: 8px 12px; /* Espaciado interno compacto */
	flex: 1; /* Ocupar todo el espacio disponible */
	outline: none; /* Sin outline */
	font-size: 14px; /* Tama침o de fuente */
}

/* Filtro de fechas compacto */
.filtro-fechas {
	display: flex; /* Layout flexible para dos inputs */
	align-items: center; /* Centrado vertical */
	gap: 8px; /* Espacio entre inputs */
	background: white; /* Fondo blanco */
	border: 2px solid var(--border-color); /* Borde gris */
	border-radius: var(--border-radius); /* Bordes redondeados */
	padding: 0 8px; /* Espaciado interno lateral */
}

.filtro-fechas input {
	border: none; /* Sin borde interno */
	padding: 8px 0; /* Espaciado interno vertical */
	outline: none; /* Sin outline */
	font-size: 13px; /* Tama침o de fuente peque침o */
	width: 110px; /* Ancho fijo para consistencia */
}

.separador-fechas {
	color: var(--secondary-color); /* Color gris para el separador */
	font-size: 12px; /* Tama침o peque침o */
}

/* ================================
   CONTENEDOR PRINCIPAL DE CONTENIDO - CORREGIDO
   ================================ */

/* Contenedor principal que contendr치 la tabla con scroll */
.main-content {
	flex: 1; /* Ocupa todo el espacio disponible */
	display: flex; /* Flexbox para layout */
	flex-direction: column; /* Direcci칩n columna */
	overflow: hidden; /* Sin overflow */
	padding: 0 15px; /* Menos padding para alineaci칩n con men칰s */
	min-height: 0; /* Permite reducci칩n */
	padding-bottom: 80px; /* Espacio para la barra inferior absoluta */
}

/* ================================
   TABLA CON REDIMENSIONAMIENTO Y REORDENAMIENTO REAL
   ================================ */

/* Contenedor de la tabla */
.table-container {
	flex: 1; /* Ocupa todo el espacio disponible */
	display: flex; /* Flexbox */
	flex-direction: column; /* Direcci칩n columna */
	overflow: hidden; /* Sin overflow */
	padding: 0; /* Sin padding */
	min-height: 0; /* Permite reducci칩n */
	margin-top: 0; /* Eliminar margen superior del t칤tulo eliminado */
}

/* Encabezado de la tabla - OCULTADO */
.table-header {
	display: none !important; /* Ocultar el t칤tulo eliminado */
	justify-content: space-between; /* Espacio entre t칤tulo y acciones */
	align-items: center; /* Centrado vertical */
	margin-bottom: 15px; /* Espacio inferior */
	padding: 15px 0; /* Espaciado vertical */
	border-bottom: 2px solid var(--border-color); /* Borde inferior */
	flex-shrink: 0; /* No se reduce */
}

/* Contenedor de tabla con scroll horizontal */
.custodias-table {
	background: white; /* Fondo blanco */
	border-radius: var(--border-radius); /* Bordes redondeados */
	overflow: auto; /* Permitir scroll horizontal */
	box-shadow: var(--shadow); /* Sombra sutil */
	display: flex; /* Flexbox */
	flex-direction: column; /* Direcci칩n columna */
	flex: 1; /* Ocupa todo el espacio */
	min-height: 0; /* Permite reducci칩n */
}

/* Cabecera con ancho fijo para redimensionamiento */
.table-header-fixed {
	flex-shrink: 0;
	min-width: max-content; /* 游댠 Forzar ancho m칤nimo */
}

/* 游댠 NUEVO: Cuerpo con scroll independiente */
.table-body-scroll {
	flex: 1;
	overflow-y: auto;
	overflow-x: auto; /* 游댠 CAMBIO: Scroll horizontal tambi칠n */
	min-width: max-content;
}

/* 游댠 NUEVO: Fila de tabla con ancho flexible */
.table-row {
	display: grid;
	grid-template-columns: minmax(100px, 1fr) minmax(200px, 2fr) minmax(140px, 1fr) minmax(110px, 1fr) minmax(180px, 1.5fr) minmax(130px, 1fr) minmax(140px, 1fr);
	gap: 0;
	padding: 0; /* 游댠 CAMBIO: Sin padding en la fila */
	align-items: stretch;
	min-width: max-content;
}

/* 游댠 NUEVO: Celdas con redimensionamiento real */
.table-row > div,
.header-row > div {
	padding: 12px 10px;
	min-width: 60px;
	max-width: 400px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	border-right: 1px solid #f0f0f0; /* 游댠 Divisor sutil entre celdas */
	display: flex;
	align-items: center;
	position: relative;
}

/* 游댠 NUEVO: Encabezados redimensionables */
.header-row {
	background: #f8f9fa !important; /* Gris institucional claro */
	color: #212529 !important; /* Texto negro */
	font-weight: 600; /* Negrita */
	font-size: 13px; /* Tama침o de fuente */
	position: sticky; /* Cabecera fija */
	top: 0; /* Pegada arriba */
	z-index: 10; /* Por encima del contenido */
	border-bottom: 2px solid #dee2e6;
	display: grid;
	grid-template-columns: minmax(100px, 1fr) minmax(200px, 2fr) minmax(140px, 1fr) minmax(110px, 1fr) minmax(180px, 1.5fr) minmax(130px, 1fr) minmax(140px, 1fr);
	gap: 0;
}

